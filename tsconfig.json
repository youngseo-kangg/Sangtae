{
	"compilerOptions": {
		"target": "ES2019",
		"module": "ESNext",
		"lib": ["DOM", "ESNext"],
		"jsx": "react-jsx",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "lib",
		"isolatedModules": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "lib", "**/__tests__/**"]
}
